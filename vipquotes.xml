<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="plugin" group="search" method="upgrade">
	<name>PLG_SEARCH_VIPQUOTES</name>
	<author>Todor Iliev</author>
    <copyright>Copyright (C) 2015 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>3.0</version>
    <creationDate>07 September, 2015</creationDate>
	<description><![CDATA[
    <p>Enables searching of <a href="http://itprism.com/free-joomla-extensions/others/quotes-collection-manager" target="_blank">Vip Quotes Component</a>.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive <strong>gifts</strong>, <strong>discount codes</strong>, information about <strong>updates</strong> and information about <strong>new ITPrism extensions</strong>.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/news-display/quotes/6877">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_SEARCH_VIPQUOTES_HELP_URL"/>
    
	<files>
		<filename plugin="vipquotes">vipquotes.php</filename>
        <folder>language</folder>
	</files>
    
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="20"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>
				
			<field name="search_author" type="radio" class="btn-group"
                    default="1"
                    label="PLG_SEARCH_VIPQUOTES_AUTHOR_NAME_LABEL"
                    description="PLG_SEARCH_VIPQUOTES_AUTHOR_NAME_DESC"
                >
                <option value="0">JOFF</option>
                <option value="1">JON</option>
            </field>

            <field name="search_category" type="radio" class="btn-group"
                    default="1"
                    label="PLG_SEARCH_VIPQUOTES_CATEGORY_NAME_LABEL"
                    description="PLG_SEARCH_VIPQUOTES_CATEGORY_NAME_DESC"
                >
                <option value="0">JOFF</option>
                <option value="1">JON</option>
            </field>
            
			</fieldset>
		</fields>
	</config>
</extension>
